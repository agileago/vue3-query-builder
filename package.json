{
  "name": "lib-starter",
  "version": "0.0.1",
  "main": "dist/lib-starter.cjs.js",
  "module": "dist/lib-starter.es.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib-starter.es.js",
      "require": "./dist/lib-starter.cjs.js"
    },
    "./*": "./*"
  },
  "scripts": {
    "dev": "pnpm --filter=playground dev",
    "build": "vite build",
    "test:dev": "vitest",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "type:check": "tsc --noEmit",
    "lint": "eslint --fix .",
    "format": "prettier --write '**/*.{ts,tsx,js,css,scss,html,json}'",
    "chrome": "open -n /Applications/Google\\ Chrome.app/ --args --disable-web-security  --user-data-dir=$HOME/MyChromeDevUserData/",
    "release": "release-it",
    "prepublishOnly": "run-s test build release",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "files": [
    "dist",
    "types",
    "package.json"
  ],
  "author": {
    "name": "agileago",
    "email": "agileago@gmail.com"
  },
  "keywords": [
    "lib starter"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agileago/lib-starter.git"
  },
  "homepage": "https://agileago.github.io/lib-starter",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@release-it/conventional-changelog": "^4.3.0",
    "@runafe/yorkie-pnpm": "^1.0.1",
    "@types/prettier": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^12.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "release-it": "^14.14.2",
    "rimraf": "^3.0.2",
    "sass": "^1.50.1",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.5",
    "vite-plugin-dts": "^1.1.1",
    "vite-tsconfig-paths": "^3.4.1",
    "vitepress": "^0.22.3",
    "vitest": "^0.9.4",
    "vue": "^3.2.33"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E GIT_PARAMS"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,json}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    },
    "github": {
      "release": true,
      "web": true
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  }
}
